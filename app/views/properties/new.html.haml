.form-wrapper
  .form-info
    %h1 Add New Property

    .error-messages
      - for message in @property.errors.full_messages
        %p #{property}

  = form_for(@property, :html => { :class => 'form-fields' }) do |f|
    %fieldset
      = f.text_field :location, :placeholder => 'Location', :id => 'gmap_location', :class => 'req', :autocomplete => :off
      = f.text_field :description, :placeholder => 'Description', :class => 'req', :autocomplete => :off
    = f.submit "Create", :class => "submit"
