- content_for :modal do
  %h1 Edit Manager
  %p The quick brown fox jumped over the lazy dog.

- content_for :head do
  %script{:type => "text/javascript"}       |
    $(function() {                          |
      $('a#go').click(function() {            |
        var id = $(this).attr('id');        |
        console.log(id);                    |
      })                                    |
    })                                      |

.directory
  %h1 View Managers
  %table
    %thead
      %tr
        %th Display Name
        %th Email
        %th Modify
    %tbody
    - @managers.each do |m|
      %tr
        %th= link_to m.display_name, manager_url(m)
        %th= m.email
        %th
          = link_to image_tag("iconmonstr-pencil-10-icon.svg", :alt => "Edit"), "#modal_content", :id => "go", :name => "modal_content", :rel => "leanModal"
          = link_to image_tag("iconmonstr-x-mark-icon.svg", :alt => "Delete"), manager_url(m.id), method: :delete, remote: false if current_user != m
